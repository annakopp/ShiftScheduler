<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %><br>
    <% end %>
  <% end %>

  <% if flash[:notices] %>
    <% flash[:notices].each do |notice| %>
      <%= notice %><br>
    <% end %>
  <% end %>

<% if !current_user.nil? %>
  <ul>
    <li>Logged in as: <%= current_user.email %></li>
    <li><%= button_to "Logout", session_url, :method => :delete %></li>
    <li><%= link_to "Home", users_url %></li>
  </ul>
<% end %>

<%= yield %>

</body>
</html>