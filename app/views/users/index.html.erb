<section class="home">
  <h2>Welcome <%= @user.first_name %>!</h2>
  <p>You are an <%= @user.user_type %></p>

  <h3>Things you can do:</h3>
  <ul>
     <% if can? :add_employees, current_user %>
      <li>
        <%= link_to "Add an Employee", add_employee_url() %>
      </li>
      <li>
        <%= link_to "List all Employees", list_employees_url() %>
      </li>

    <% end %>
    <li>
      <%= link_to "View Pending Shifts", shift_requests_url() %>
    </li>
    <li><%= link_to "View Shifts", shifts_url() %></li>

  </ul>
</section>
